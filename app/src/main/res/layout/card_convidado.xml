<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="@dimen/cardMarginVertical"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<LinearLayout
    android:background="@color/colorCinza"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="35dp">


    <TextView

        android:textColor="@color/bootstrap_gray_dark"
        android:textSize="20sp"
        android:id="@+id/txt_Convidado_Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ana Lúcia Padilha"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceBody1" />




</LinearLayout>

        <TextView
            android:textColor="@color/bootstrap_gray"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            android:id="@+id/txt_Convidado_Grau_Parentesco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceBody2"
            />



        <TextView
            android:layout_marginBottom="4dp"
            android:textColor="@color/bootstrap_gray"
            android:textSize="18sp"
            android:layout_marginLeft="24dp"
            android:id="@+id/txt_Status_Convidado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="á confirmar"
            android:gravity="end"
            android:textAppearance="?attr/textAppearanceBody2"/>



    </LinearLayout>


</android.support.design.card.MaterialCardView>
