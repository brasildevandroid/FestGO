<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".lojavirtual.DetalheBuffet">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/container_Fotos_Profissional"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/txt_Nome_Buffet"
        android:textColor="@color/browser_actions_text_color"
        android:layout_marginBottom="16dp"
        android:textSize="25sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Santa´Rosa"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/avaliacao_Fornecedor"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:mrb_progressTint="@color/colorAmarelo"
            app:mrb_secondaryProgressTint="@android:color/white" />

        <TextView
            android:id="@+id/txtNumero_Avaliacoes"
            style="@style/AppTheme.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorAccent"
            tools:text="(10)" />




    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




    </LinearLayout>


    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/browser_actions_text_color"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Detalhes" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_marginLeft ="8dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_pagamento" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView3"
            android:gravity="center"
            android:text="A partir de R$ 50,00" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="158dp"
            android:src="@drawable/ic_convidado" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="-158dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="10 á 350 convidados" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>




    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:textColor="@color/browser_actions_text_color"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/localizacao"/>

        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Mapa"/>


    </LinearLayout>


    <TextView

        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rua Araraquara 600,limoeiros,São Paulo(RJ)"/>



    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possui Local próprio pra Recepção ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não"/>



    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cozinha no mesmo local da Recepção ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"/>





    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que inclui o menu ?"/>


    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="É possível adaptar ou alterar os menus?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"/>



    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="é possível elaborar menus personalizados ? "/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"/>




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que tipo de cozinha servida ? "/>


    <TextView
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tradicional,Regional,Internacional"/>




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispõe de menus especiais? "/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetarianos,Diabéticos,Hipertensivos,Veganas"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="Entradas quentes e frias,salgados assados e fritos,mini porções,frios finos,bebidas,mão de obra e utensílios para todo o trabalho referente ao buffet"
        android:textSize="20sp" />

    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Também serve o bolo da noiva ? "/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"/>




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posso levar o meu próprio bolo de noiva ? Tem algum encargo ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim,desde que comunique para que tenham material para servir o mesmo"/>




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Como funciona o Open Bar ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade total fixa(com limite de hora)"/>



    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tem uma hora limite para as celebrações ?"/>


    <TextView
        android:textColor="@color/bootstrap_gray_dark"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim,05:00"/>




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exclusividade de fotográfo ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não"/>





    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exclusividade de música ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não"/>





    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celebra mais de um evento por dia ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"/>




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celebra mais de um evento por dia ?"/>


    <TextView
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"/>


    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual á penalização no caso de não atingir o mínimo ?"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="Valores passados para evento acima de 50 convidados,Será cobrados valores excedente em casos de horas extras,também será cobrado valor extra para excedentes de convidados"
        android:textSize="20sp" />




    <TextView
        android:textColor="@color/browser_actions_text_color"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual á forma de pagamento ?"/>


    <TextView
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A vista ou parcelamento em depósito bancário sem entrada e parcelas fixas do valor total até 20 dias antes do evento,parcelam no cartão de crédito"/>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/browser_actions_text_color"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(10) Clientes avaliaram >"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="8dp"
        android:id="@+id/rec_Avaliacoes_Fornecedor"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>



    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/btn_Solicitar_Orcamento"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitar Orçamento >"/>


</LinearLayout>



</ScrollView>