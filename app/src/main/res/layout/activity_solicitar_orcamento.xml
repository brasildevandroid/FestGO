<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lojavirtual.SolicitarOrcamento">


    <TextView
        android:textColor="@color/bootstrap_gray_dark"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pedido de orçamento"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_cliente"
            android:layout_marginBottom="4dp"/>


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="14sp"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:roundedCorners="true"
            android:hint="nome:"/>

    </LinearLayout>




    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_convidado"
            android:layout_marginBottom="4dp"/>


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="14sp"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:roundedCorners="true"
            android:hint="80 convidados"/>

    </LinearLayout>



    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_date_range_black_24dp"
            android:layout_marginBottom="4dp"/>


        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="14sp"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:roundedCorners="true"
            android:hint="20/05/2018"/>

    </LinearLayout>





    <TextView
        android:layout_gravity="start"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentário"
        android:textSize="20sp"/>




    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="14sp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:roundedCorners="true"
        android:hint="Gostaria de receber orçamento!"/>



    <Button
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="enviar solicitação"/>


</LinearLayout>