<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bootstrap_gray"
    tools:context=".FragmentTermosCondicoes">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:background="@color/bootstrap_gray_dark"
        android:textColor="@color/colorBranco"
        android:text="Termos e Condições de Uso"/>


    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        android:text="Bem vindo ao Easy Festa!" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:text="@string/boas_vindas"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_Prosseguir_Cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:text="Prosseguir" />


    <Button
        android:id="@+id/btn_Cancelar_Cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:text="cancelar" />
</RelativeLayout>
