<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaConfiguraFesta">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            style="@style/AppThemeTelaApresentacao"
            android:id="@+id/slideViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView

            android:id="@+id/card_Configura_Festa"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:elevation="15dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                    <EditText

                        android:textColorHint="@color/colorPrimary"
                        android:id="@+id/edt_Configura_Festa_Orcamento"
                        android:background="@drawable/background_text_view"
                        android:textAlignment="center"
                        android:layout_margin="16dp"
                        android:inputType="number"
                        android:textSize="30sp"
                        android:textColor="@color/bootstrap_gray_dark"
                        android:hint="Informe o valor do orÃ§amento"
                        android:layout_width="match_parent"
                        android:layout_height="90dp" />




                <LinearLayout

                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_text_view"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <TextView
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="16dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:text="Informe o dia do evento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout

                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_text_view"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <TextView
                        android:layout_gravity="center"
                        android:textAlignment="center"

                        android:layout_margin="16dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:text="Informe tipo de festa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
        android:id="@+id/btn_Configura_Festa"
        android:textColor="@color/colorBranco"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="80dp"
        android:text="finalizar"

        android:textSize="30sp"/>




        <LinearLayout

            android:id="@+id/dotsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal" />


        <ImageButton

            android:background="@drawable/background_voltar_avancar"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_voltar"
            android:id="@+id/btn_Back_Button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <ImageButton
            android:background="@drawable/background_voltar_avancar"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_avancar"
            android:id="@+id/btn_Next_Button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />




        <RelativeLayout

            android:layout_alignParentBottom="true"
            android:background="@color/colorBranco"
            android:layout_width="match_parent"
            android:layout_height="420dp">

        </RelativeLayout>

    </RelativeLayout>






</LinearLayout>